# Jira Automation Configuration
# Copy this file to .env and fill in your values
# DO NOT COMMIT .env to version control

# Your Atlassian instance URL (no trailing slash)
JIRA_BASE_URL=https://your-company.atlassian.net

# Your Atlassian email address
JIRA_EMAIL=your.email@company.com

# Your Atlassian API token
# Generate at: https://id.atlassian.com/manage-profile/security/api-tokens
JIRA_API_TOKEN=your_jira_api_token_here

# Default project key for bulk operations
JIRA_PROJECT_KEY=YOUR_PROJECT

# Everhour Time Tracking Configuration
# Your Everhour API token
# Generate at: https://everhour.com/app/settings/my-profile
EVERHOUR_API_TOKEN=your_everhour_api_token_here
