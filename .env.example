# =============================================================================
# CONNECT 2.0 - DOCKER COMPOSE ENVIRONMENT CONFIGURATION
# =============================================================================
# This file contains environment variables for Docker Compose services.
# Copy this to .env and update values for local development.
# =============================================================================

# -----------------------------------------------------------------------------
# POSTGRESQL CONFIGURATION
# -----------------------------------------------------------------------------
POSTGRES_USER=connect
POSTGRES_PASSWORD=connect_dev_password
POSTGRES_DB=connect_dev
POSTGRES_PORT=5432

# PostgreSQL version
POSTGRES_VERSION=15-alpine

# -----------------------------------------------------------------------------
# REDIS CONFIGURATION
# -----------------------------------------------------------------------------
REDIS_PORT=6379
REDIS_PASSWORD=

# Redis version
REDIS_VERSION=7-alpine

# -----------------------------------------------------------------------------
# BACKEND SERVICE
# -----------------------------------------------------------------------------
BACKEND_PORT=3000
BACKEND_NODE_ENV=development

# -----------------------------------------------------------------------------
# FRONTEND SERVICE
# -----------------------------------------------------------------------------
FRONTEND_PORT=5173

# -----------------------------------------------------------------------------
# RABBITMQ (MESSAGE QUEUE - Optional)
# -----------------------------------------------------------------------------
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest

# -----------------------------------------------------------------------------
# ELASTICSEARCH (SEARCH - Optional)
# -----------------------------------------------------------------------------
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_VERSION=8.11.0

# -----------------------------------------------------------------------------
# PGADMIN (DATABASE MANAGEMENT - Optional)
# -----------------------------------------------------------------------------
PGADMIN_PORT=5050
PGADMIN_DEFAULT_EMAIL=admin@connect.local
PGADMIN_DEFAULT_PASSWORD=admin
