# =============================================================================
# CONNECT 2.0 - FRONTEND ENVIRONMENT CONFIGURATION
# =============================================================================
# This is an example configuration file. Copy this to .env and update values.
# NEVER commit .env files to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# API CONFIGURATION
# -----------------------------------------------------------------------------
VITE_API_BASE_URL=http://localhost:3000/api/v1
VITE_WS_URL=ws://localhost:3000

# -----------------------------------------------------------------------------
# APPLICATION CONFIGURATION
# -----------------------------------------------------------------------------
VITE_APP_NAME=Connect 2.0
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# Company branding
VITE_COMPANY_NAME=Blueprint Capital
VITE_SUPPORT_EMAIL=support@blueprint.com
VITE_SUPPORT_PHONE=(206) 555-0100

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
VITE_FEATURE_BPO_INTEGRATION=true
VITE_FEATURE_OFFLINE_MODE=false                   # Enable for iPad inspection app
VITE_FEATURE_AI_DOCUMENT_EXTRACTION=true
VITE_FEATURE_MFA=false                            # Enable in production

# -----------------------------------------------------------------------------
# AUTHENTICATION
# -----------------------------------------------------------------------------
VITE_SESSION_TIMEOUT=3600                         # 1 hour (in seconds)
VITE_TOKEN_REFRESH_INTERVAL=840                   # 14 minutes (in seconds)

# -----------------------------------------------------------------------------
# EXTERNAL SERVICES
# -----------------------------------------------------------------------------

# Google Maps API (for address autocomplete, maps)
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Sentry (Error Tracking)
VITE_SENTRY_DSN=your-sentry-dsn
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1

# Google Analytics (Optional)
VITE_GA_TRACKING_ID=UA-XXXXXXXXX-X

# -----------------------------------------------------------------------------
# UI CONFIGURATION
# -----------------------------------------------------------------------------

# Pagination
VITE_DEFAULT_PAGE_SIZE=25
VITE_MAX_PAGE_SIZE=100

# File uploads
VITE_MAX_FILE_SIZE_MB=50
VITE_MAX_PHOTO_SIZE_MB=10
VITE_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png,.gif

# Date/time format
VITE_DATE_FORMAT=MM/DD/YYYY
VITE_TIME_FORMAT=h:mm A
VITE_TIMEZONE=America/Los_Angeles

# Currency format
VITE_CURRENCY_LOCALE=en-US
VITE_CURRENCY=USD

# -----------------------------------------------------------------------------
# DEVELOPMENT & DEBUG
# -----------------------------------------------------------------------------

# Enable debug mode (verbose logging)
VITE_DEBUG=false

# Mock API responses (for development without backend)
VITE_MOCK_API=false

# Show feature flags panel
VITE_SHOW_FEATURE_FLAGS=true
