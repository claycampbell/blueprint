# Development Environment Variables
# Copy this to terraform.tfvars and fill in the values

project_name = "connect2-app"
environment  = "dev"
aws_region   = "us-west-2"

# Networking
vpc_cidr           = "10.0.0.0/16"
az_count           = 2
enable_nat_gateway = true

# Container - Update with your ECR image after first push
container_image   = "123456789.dkr.ecr.us-west-2.amazonaws.com/connect2-app-dev:latest"
container_port    = 80
health_check_path = "/"

# ECS Task sizing (minimal for dev)
task_cpu      = 256
task_memory   = 512
desired_count = 2
min_capacity  = 2
max_capacity  = 4

# Environment variables
environment_variables = [
  {
    name  = "NODE_ENV"
    value = "development"
  },
  {
    name  = "API_URL"
    value = "http://api-dev.example.com"
  }
]
