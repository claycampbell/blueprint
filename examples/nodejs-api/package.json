{
  "name": "connect-api",
  "version": "0.1.0",
  "description": "Connect 2.0 Platform API - Node.js + TypeScript + Express",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --coverage --detectOpenHandles",
    "test:unit": "jest --testPathPattern=tests/unit --coverage",
    "test:integration": "jest --testPathPattern=tests/integration --coverage --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2"
  },
  "keywords": [
    "connect",
    "blueprint",
    "api",
    "express",
    "typescript"
  ],
  "author": "Datapage Platform Team",
  "license": "UNLICENSED",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "@aws-sdk/client-s3": "^3.470.0",
    "@aws-sdk/client-sqs": "^3.470.0",
    "@aws-sdk/s3-request-presigner": "^3.470.0",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.11",
    "@types/supertest": "^6.0.2",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@faker-js/faker": "^8.3.1",
    "aws-sdk-client-mock": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
